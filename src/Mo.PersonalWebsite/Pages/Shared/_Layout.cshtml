<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>@ViewData["Title"] - Mo's Personal Website</title>
    
    @if (!string.IsNullOrEmpty(ViewData["MetaDescription"] as string))
    {
        <meta name="description" content="@ViewData["MetaDescription"]" />
    }
    else
    {
        <meta name="description" content="Mo's personal website - Software developer sharing insights, projects, and experiences in web development and technology." />
    }
    
    @if (!string.IsNullOrEmpty(ViewData["MetaKeywords"] as string))
    {
        <meta name="keywords" content="@ViewData["MetaKeywords"]" />
    }
    
    <!-- Open Graph meta tags -->
    <meta property="og:title" content="@ViewData["Title"] - Mo's Personal Website" />
    <meta property="og:description" content="@(ViewData["MetaDescription"] ?? "Mo's personal website - Software developer sharing insights, projects, and experiences in web development and technology.")" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@(Context.Request.Scheme)://@(Context.Request.Host)@(Context.Request.Path)" />
    <meta property="og:image" content="@(Context.Request.Scheme)://@(Context.Request.Host)/images/og-image.jpg" />
    
    <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@ViewData["Title"] - Mo's Personal Website" />
    <meta name="twitter:description" content="@(ViewData["MetaDescription"] ?? "Mo's personal website - Software developer sharing insights, projects, and experiences in web development and technology.")" />
    <meta name="twitter:image" content="@(Context.Request.Scheme)://@(Context.Request.Host)/images/og-image.jpg" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true">
    
    <!-- Custom styles -->
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); backdrop-filter: blur(10px);">
        <div class="container">
            <a class="navbar-brand fw-bold fs-4" href="/">
                <i class="bi bi-code-slash me-2"></i>Mo Ravaei
            </a>
            
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link fw-medium px-3 rounded-pill mx-1 @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active bg-white bg-opacity-20" : "")" href="/">
                            <i class="bi bi-house-door me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium px-3 rounded-pill mx-1 @(ViewContext.RouteData.Values["page"]?.ToString() == "/About" ? "active bg-white bg-opacity-20" : "")" href="/About">
                            <i class="bi bi-person me-1"></i>About
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium px-3 rounded-pill mx-1 @(ViewContext.RouteData.Values["page"]?.ToString() == "/Articles" ? "active bg-white bg-opacity-20" : "")" href="/Articles">
                            <i class="bi bi-journal-text me-1"></i>Articles
                        </a>
                    </li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-medium px-3 rounded-pill mx-1" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                <i class="bi bi-gear me-1"></i>Manage
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0" style="background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px);" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item rounded-2 m-1" href="/Articles/Manage"><i class="bi bi-journal-text me-2"></i>Manage Articles</a></li>
                                <li><a class="dropdown-item rounded-2 m-1" href="/Articles/Create"><i class="bi bi-plus-circle me-2"></i>New Article</a></li>
                                <li><hr class="dropdown-divider mx-2"></li>
                                <li><a class="dropdown-item rounded-2 m-1" href="/Admin/Dashboard"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                                <li><a class="dropdown-item rounded-2 m-1 text-danger" href="/Auth/Logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <p class="mb-0 text-muted">&copy; @DateTime.Now.Year Mo Ravaei - Lead Software Engineer</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="https://github.com/ravaee" target="_blank" class="text-light me-3" title="GitHub"><i class="bi bi-github fs-5"></i></a>
                    <a href="https://www.linkedin.com/in/mohamad-ravaei/" target="_blank" class="text-light me-3" title="LinkedIn"><i class="bi bi-linkedin fs-5"></i></a>
                    <a href="mailto:ravaeimohamad@gmail.com" class="text-light" title="Email"><i class="bi bi-envelope fs-5"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Particle system for home page -->
    <script src="~/js/particles.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
