@page "/Pages/{slug}"
@model PageDetailModel
@{
    ViewData["Title"] = Model.PageEntity?.Title ?? "Page Not Found";
    if (!string.IsNullOrWhiteSpace(Model.PageEntity?.MetaDescription))
    {
        ViewData["Description"] = Model.PageEntity.MetaDescription;
    }
    if (!string.IsNullOrWhiteSpace(Model.PageEntity?.MetaKeywords))
    {
        ViewData["Keywords"] = Model.PageEntity.MetaKeywords;
    }
}

@if (Model.PageEntity != null)
{
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <article>
                        <header class="mb-4">
                            <h1 class="display-4 mb-3">@Model.PageEntity.Title</h1>
                        </header>
                        
                        <div class="content">
                            @Html.Raw(Model.PageEntity.Content)
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h1 class="display-4 text-muted mb-3">404</h1>
                    <h2 class="h4 mb-4">Page Not Found</h2>
                    <p class="text-muted mb-4">The page you're looking for doesn't exist or has been moved.</p>
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house-door me-1"></i>Go Home
                    </a>
                </div>
            </div>
        </div>
    </section>
}
