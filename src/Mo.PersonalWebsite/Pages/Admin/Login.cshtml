@page "/Admin/Login"
@model Mo.PersonalWebsite.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "Admin Login";
    Layout = "_Layout";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-5">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <h2 class="h4 text-center mb-1">Admin Login</h2>
                        <p class="text-center text-secondary mb-4">Sign in to access the admin dashboard</p>

                        <form method="post" novalidate>
                            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="LoginInput.Username" class="form-label">Username</label>
                                <input asp-for="LoginInput.Username" class="form-control" placeholder="Enter your username" autocomplete="username" />
                                <span asp-validation-for="LoginInput.Username" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LoginInput.Password" class="form-label">Password</label>
                                <input asp-for="LoginInput.Password" class="form-control" placeholder="Enter your password" autocomplete="current-password" />
                                <span asp-validation-for="LoginInput.Password" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="LoginInput.RememberMe" class="form-check-input" />
                                <label asp-for="LoginInput.RememberMe" class="form-check-label">Remember me</label>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Sign in</button>
                            </div>

                            <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
