@page
@model Mo.PersonalWebsite.Pages.Admin.Articles.IndexModel
@{
    ViewData["Title"] = "Manage Articles";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">Manage Articles</h1>
                <p class="text-secondary mb-0">Create, edit, and manage your blog articles</p>
            </div>
            <a href="/Admin/Articles/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>New Article
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Search -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form method="get" class="row g-2 align-items-end">
                    <div class="col-12 col-md-8">
                        <label for="search" class="form-label">Search Articles</label>
                        <input type="text" 
                               id="search" 
                               name="search" 
                               value="@Model.SearchTerm" 
                               class="form-control" 
                               placeholder="Search by title or content...">
                    </div>
                    <div class="col-12 col-md-4">
                        <button type="submit" class="btn btn-outline-primary me-2">
                            <i class="bi bi-search me-1"></i>Search
                        </button>
                        @if (!string.IsNullOrEmpty(Model.SearchTerm))
                        {
                            <a href="/Admin/Articles" class="btn btn-outline-secondary">Clear</a>
                        }
                    </div>
                </form>
            </div>
        </div>

        <!-- Articles List -->
        @if (Model.Articles.Any())
        {
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Title</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Updated</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var article in Model.Articles)
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <h6 class="mb-1">@article.Title</h6>
                                                @if (!string.IsNullOrEmpty(article.MetaDescription))
                                                {
                                                    <small class="text-muted">@article.MetaDescription</small>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            @if (article.IsPublished)
                                            {
                                                <span class="badge text-bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Published
                                                </span>
                                                @if (article.PublishedAt.HasValue)
                                                {
                                                    <div class="small text-muted">@article.PublishedAt.Value.ToString("MMM dd, yyyy")</div>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge text-bg-secondary">
                                                    <i class="bi bi-pencil me-1"></i>Draft
                                                </span>
                                            }
                                        </td>
                                        <td class="text-muted small">
                                            @article.CreatedAt.ToString("MMM dd, yyyy")
                                        </td>
                                        <td class="text-muted small">
                                            @article.UpdatedAt.ToString("MMM dd, yyyy")
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a href="/Admin/Articles/Edit/@article.Id" class="btn btn-outline-primary" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="/Articles/@article.Slug" target="_blank" class="btn btn-outline-secondary" title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button" 
                                                        class="btn btn-outline-danger" 
                                                        title="Delete"
                                                        onclick="confirmDelete('@article.Id', '@article.Title')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <i class="bi bi-journal-text text-secondary" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">No Articles Found</h5>
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <p class="text-muted">No articles match your search criteria. Try adjusting your search terms.</p>
                        <a href="/Admin/Articles" class="btn btn-outline-secondary">View All Articles</a>
                    }
                    else
                    {
                        <p class="text-muted">Get started by creating your first article.</p>
                        <a href="/Admin/Articles/Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Create Article
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the article "<span id="articleTitle"></span>"?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" style="display: inline;">
                    <input type="hidden" id="deleteArticleId" name="id" />
                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete Article
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(articleId, articleTitle) {
        document.getElementById('deleteArticleId').value = articleId;
        document.getElementById('articleTitle').textContent = articleTitle;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>
