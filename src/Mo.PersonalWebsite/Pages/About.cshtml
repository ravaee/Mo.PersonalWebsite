@page
@model AboutModel
@{
    ViewData["Title"] = "About Mo Ravaei";
    ViewData["MetaDescription"] = "Meet Mo Ravaei - Lead Software Engineer with 9+ years of experience building distributed systems, cloud solutions, and high-performance applications across multiple industries.";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-start gy-4">
            <div class="col-12 col-lg-4">
                <div class="card shadow-sm border-0">
                    <img src="/images/profile.jpg" alt="Profile Photo" class="card-img-top" onerror="this.src='data:image/svg+xml;base64,'" />
                    <div class="card-body">
                        <h1 class="card-title h4 mb-1">Hello! I'm Mo</h1>
                        <p class="text-muted mb-0">Software Developer & Technology Enthusiast</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-8">
                <div class="mb-4">
                    <h2 class="h4">About Me</h2>
                    <p class="mb-3">
                        I'm a passionate software developer with a deep love for creating innovative web applications and solving complex problems through code.
                        With expertise in modern web technologies, I strive to build solutions that are both technically robust and user-friendly.
                    </p>
                    <p class="mb-3">
                        My journey in software development has taken me through various domains, from full-stack web development to cloud architecture.
                        I believe in the power of continuous learning and am always exploring new technologies and methodologies to improve my craft.
                    </p>
                    <p class="mb-0">
                        When I'm not coding, you can find me reading about the latest tech trends, contributing to open-source projects,
                        or sharing knowledge with the developer community through writing and mentoring.
                    </p>
                </div>

                <div class="row g-4">
                    <div class="col-12 col-md-6">
                        <h3 class="h5">Technical Skills</h3>
                        <div class="mt-2 d-flex flex-wrap gap-2">
                            <span class="badge text-bg-primary">.NET Core</span>
                            <span class="badge text-bg-primary">C#</span>
                            <span class="badge text-bg-primary">ASP.NET</span>
                            <span class="badge text-bg-primary">JavaScript</span>
                            <span class="badge text-bg-primary">TypeScript</span>
                            <span class="badge text-bg-primary">React</span>
                            <span class="badge text-bg-primary">SQL Server</span>
                            <span class="badge text-bg-primary">Azure</span>
                            <span class="badge text-bg-primary">Docker</span>
                            <span class="badge text-bg-primary">Git</span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <h3 class="h5">Interests</h3>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2"><i class="bi bi-check2-circle text-primary me-2"></i>Clean Architecture & Design Patterns</li>
                            <li class="mb-2"><i class="bi bi-check2-circle text-primary me-2"></i>Cloud Computing & DevOps</li>
                            <li class="mb-2"><i class="bi bi-check2-circle text-primary me-2"></i>Open Source Contribution</li>
                            <li class="mb-0"><i class="bi bi-check2-circle text-primary me-2"></i>Technical Writing & Mentoring</li>
                        </ul>
                    </div>
                </div>

                <div class="mt-4">
                    <h3 class="h5 text-center text-md-start">Let's Connect</h3>
                    <div class="d-flex justify-content-center justify-content-md-start gap-3 mt-2">
                        <a href="#" class="text-secondary fs-4"><i class="bi bi-github"></i></a>
                        <a href="#" class="text-secondary fs-4"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="text-secondary fs-4"><i class="bi bi-twitter-x"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
