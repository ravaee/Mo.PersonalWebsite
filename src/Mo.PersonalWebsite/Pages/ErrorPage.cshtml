@page
@model ErrorPageModel
@{
    ViewData["Title"] = $"Error {Model.StatusCode}";
}

<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full text-center">
        <div class="mb-8">
            <h1 class="text-9xl font-bold text-gray-300">@Model.StatusCode</h1>
        </div>
        
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">
                @switch (Model.StatusCode)
                {
                    case 404:
                        <span>Page Not Found</span>
                        break;
                    case 403:
                        <span>Access Forbidden</span>
                        break;
                    case 500:
                        <span>Server Error</span>
                        break;
                    default:
                        <span>Oops! Something went wrong</span>
                        break;
                }
            </h2>
            
            <p class="text-gray-600 mb-8">
                @Model.ErrorMessage
            </p>
        </div>
        
        <div class="space-y-4">
            <button onclick="window.history.back()" 
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">
                Go Back
            </button>
            
            <a href="/" 
               class="block w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-6 rounded-lg transition-colors">
                Return Home
            </a>
        </div>
        
        @if (Model.ShowRequestId)
        {
            <div class="mt-8 text-xs text-gray-400">
                <p>Request ID: @Model.RequestId</p>
            </div>
        }
    </div>
</div>
